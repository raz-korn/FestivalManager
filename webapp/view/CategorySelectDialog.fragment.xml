<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <SelectDialog
        title="{i18n>titleSelectCustomer}"
        contentHeight="38.3%"
        rememberSelections="true"
        confirm=".onCategorySelectConfirm"
        liveChange=".onCategorySelectChange"
        items="{
            path: 'festivalModel>/categories',
            sorter: {path:'name'}
        }">
        <StandardListItem title="{festivalModel>name}"/>
    </SelectDialog>
</core:FragmentDefinition>